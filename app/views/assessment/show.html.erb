<div class="row">

    <div class="col-1"></div>
    <div class="col-10 page">
        <div class="sheet">
            <table class="table">
                <thead>
                <tr class="jee-table-header">
                    <th scope="col"> Technical Areas </th>
                    <th scope="col"> Indicators </th>
                    <th scope="col"> Score </th>
                    <th scope="col"> Goal </th>
                </tr>
                </thead>

                <tbody>
                <% @assessments['jee_v1']['order'].each do |technical_area| %>
                    <tr>
                        <th class="border-right"
                            scope="row"
                            rowspan="<%= @assessments['jee_v1']['sections'][technical_area]['indicators'].count %>">
                            <%= technical_area %>
                        </th>
                        <td> <%= @assessments['jee_v1']['sections'][technical_area]['indicators'][0]['label'] %> </td>
                        <td> <input type="text"> </td>
                        <td> <input type="text"> </td>
                    </tr>

                    <% @assessments['jee_v1']['sections'][technical_area]['indicators'].drop(1).each do |indicator| %>
                    <tr>
                        <td> <%= indicator['label'] %> </td>
                        <td> <input type="text"> </td>
                        <td> <input type="text"> </td>
                    </tr>
                    <% end %>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-1"></div>

</div>
