<div class="row align-items-center">
  <div class="col">
    <h1>Create an account</h1>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row pt-4">
    <div class="form-group col">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder: "Email" %>
    </div>
  </div>

  <div class="row pt-3">
    <div class="form-group col">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true, placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
    </div>
  </div>

  <div class="row pt-3">
    <div class="form-group col">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true, placeholder: "Password confirmation" %>
    </div>
  </div>

  <div class="row pt-3">
    <div class="form-group col">
      <%= f.select :role, ["Country Planner", "Technical Advisor", "Donor", "Other"].map {|r| [r, r] }, {include_blank: "Select your role"}, {class: "form-control custom-select"} %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.submit "SIGN UP", class: "w-100 btn btn-orange" %>
    </div>
  </div>
<% end %>
