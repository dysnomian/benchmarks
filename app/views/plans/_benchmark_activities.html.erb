<div class="row bg-light-gray p-1">
  <div class="col">
    <% capacity_id, indicator_id = benchmark_id.split('.') %>
    <b>Benchmark <%= benchmark_id %>:</b> <%=
    benchmarks.indicator_text(capacity_id, indicator_id) %>
  </div>
</div>

<%= content_tag :div, id: "benchmark_container_#{benchmark_id.parameterize}" do %>
  <% activities.each do |activity| %>
    <%= render "activity", benchmark_id: benchmark_id, activity: activity %>
  <% end %>
<% end %>

<%= render "activity_form", benchmark_id: benchmark_id %>
